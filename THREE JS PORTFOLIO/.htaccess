# .htaccess - Configuration Apache pour SEO et Performance

# ============================================
# 1. REDIRECTIONS ET URLS PROPRES
# ============================================

# Forcer HTTPS (obligatoire pour SEO)
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Rediriger www vers non-www (ou inverse selon préférence)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Ajouter trailing slash
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1/ [L,R=301]

# ============================================
# 2. COMPRESSION GZIP
# ============================================

<IfModule mod_deflate.c>
  # Compresser HTML, CSS, JavaScript, Text, XML
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE image/svg+xml
  
  # Exclure les anciens navigateurs
  BrowserMatch ^Mozilla/4 gzip-only-text/html
  BrowserMatch ^Mozilla/4\.0[678] no-gzip
  BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# ============================================
# 3. CACHE NAVIGATEUR
# ============================================

<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Vidéos
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType video/webm "access plus 1 year"
  
  # Fonts
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # CSS et JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  
  # HTML
  ExpiresByType text/html "access plus 0 seconds"
  
  # Modèles 3D
  ExpiresByType model/gltf-binary "access plus 1 year"
  ExpiresByType application/octet-stream "access plus 1 year"
  
  # Default
  ExpiresDefault "access plus 1 month"
</IfModule>

# Cache-Control headers
<IfModule mod_headers.c>
  # Images
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  
  # CSS et JS
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
  
  # Vidéos et modèles 3D
  <FilesMatch "\.(mp4|webm|glb|gltf)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  
  # HTML - pas de cache
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>

# ============================================
# 4. SÉCURITÉ
# ============================================

# Désactiver la signature du serveur
ServerSignature Off

# Empêcher le listing des répertoires
Options -Indexes

# Protéger les fichiers sensibles
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# Protéger wp-config, .env, etc.
<FilesMatch "(\.env|\.git|\.htaccess|\.htpasswd|package\.json|composer\.json|README\.md)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Headers de sécurité
<IfModule mod_headers.c>
  # XSS Protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Prevent clickjacking
  Header always append X-Frame-Options SAMEORIGIN
  
  # Prevent MIME sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Content Security Policy (ajustez selon vos besoins)
  Header set Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://cdn.jsdelivr.net https://www.youtube.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; media-src 'self' https:; frame-src https://www.youtube.com;"
</IfModule>

# ============================================
# 5. TYPES MIME
# ============================================

<IfModule mod_mime.c>
  # JavaScript
  AddType application/javascript js
  AddType application/x-javascript js
  AddType text/javascript js
  
  # WebP
  AddType image/webp webp
  
  # Fonts
  AddType font/woff woff
  AddType font/woff2 woff2
  
  # Modèles 3D
  AddType model/gltf-binary glb
  AddType model/gltf+json gltf
  
  # Service Worker
  AddType application/javascript sw.js
  
  # Manifest
  AddType application/manifest+json webmanifest
</IfModule>

# ============================================
# 6. PAGES D'ERREUR PERSONNALISÉES
# ============================================

ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# ============================================
# 7. OPTIMISATIONS PERFORMANCE
# ============================================

# Activer Keep-Alive
<IfModule mod_headers.c>
  Header set Connection keep-alive
</IfModule>

# Limiter la taille des uploads (si formulaire)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# ============================================
# 8. REDIRECTIONS SPÉCIFIQUES (si besoin)
# ============================================

# Exemple : Rediriger ancienne URL vers nouvelle
# Redirect 301 /old-page.html /new-page.html

# Rediriger index.html vers racine
RewriteCond %{THE_REQUEST} ^.*/index\.html
RewriteRule ^(.*)index.html$ https://%{HTTP_HOST}/$1 [R=301,L]
